layout WidthPointEditDialog{    view subview(identifier: "WidthPointEditDialog",				 layout_theme: @dialog_large,				 child_horizontal: @align_fill,				 placement: @place_column,				 show_border: false,         spacing: @unrelated_spacing)    {        group(name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/WidthOptions=Width Options", placement: @place_row) {			column() {					row(child_vertical: @align_center) {					column() {						unit_hot_number(								identifier: "leftWidth",								bind: @leftWidth,								name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/LeftWidthTextInc=&Side 1:",								min_value: 0.0,								max_value: @sideMaxWidth,                digits: 6,								bind_final: true,								stepper: true,								decimal_places: 3,								unit: "CurrentDocumentUnit"						); 					unit_hot_number(								identifier: "rightWidth",								bind: @rightWidth,								name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/RightWidthTextInc=Si&de 2:",								min_value: 0.0,								max_value: @sideMaxWidth,                digits: 6,								bind_final: true,								stepper: true,								unit: "CurrentDocumentUnit",								decimal_places: 3						);					}										toggle_button(identifier: "proportionalOnButton", 									image: {down: "LinkOnConstrainIcon.png", dark_down:"LinkOnConstrainIconDark.png", normal: "NoConstrainIcon.png", dark_normal:"NoConstrainIconDark.png"}, 									alt: "$$$/GlobAdjTool/EditWPDlg/PropBtnTip=Adjust widths proportionately",									value_on: true, value_off: false, 									action: @propButtonOn, 									bind: @proportionalOn, 									wants_focus: false);				}				unit_hot_number(					identifier: "totalWidth",					bind: @totalWidth,					name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/TotalWidthTextInc=T&otal Width:",					min_value: 0.0,					max_value: @totalMaxWidth,          digits: 6,					set_default_focus: true,					bind_final: true,					stepper: true,					unit: "CurrentDocumentUnit",					decimal_places: 3				);				overlay() {					optional(bind: @showDoubleDialog, value: 0, margin: 0, placement: @place_row) {						checkbox (							identifier: "adjustAdjoining",							bind: @adjustAdjoining,							name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/AdjustAdj=&Adjust Adjoining Width Points",							guide_mask: [ @guide_label ]						);					}					optional(bind: @showDoubleDialog, value: 1, margin: 0, placement: @place_row) {						checkbox (							identifier: "singleWidthOnlyInc",							name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/singleWidthInc=Si&ngle Width Only",							guide_mask: [ @guide_label ],							bind: @singleWidthInc						);					}				}			}			optional(bind: @showDoubleDialog, value: 1, margin: 0, placement: @place_row) {				separator(orientation: @vertical);				column() {						row(child_vertical: @align_center) {						column() {							unit_hot_number(									identifier: "leftWidth2",									bind: @leftWidth2,									name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/LeftWidthTextOut=S&ide 1:",									min_value: 0.0,									max_value: @sideMaxWidth,                  digits: 6,									bind_final: true,									stepper: true,									unit: "CurrentDocumentUnit",									decimal_places: 3							); 							unit_hot_number(									identifier: "rightWidth2",									bind: @rightWidth2,									name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/RightWidthTextOut=Sid&e 2:",									min_value: 0.0,									max_value: @sideMaxWidth,                  digits: 6,									bind_final: true,									stepper: true,									unit: "CurrentDocumentUnit",									decimal_places: 3							);						}						toggle_button(identifier: "proportional2OffButton", 										image: {down: "LinkOnConstrainIcon.png", dark_down:"LinkOnConstrainIconDark.png", normal: "NoConstrainIcon.png", dark_normal:"NoConstrainIconDark.png"},										alt: "$$$/GlobAdjTool/EditWPDlg/PropBtnTip=Adjust widths proportionately",										value_on: true, value_off: false, 										action: @propButton2off, 										bind: @proportional2On, 										wants_focus: false);					}					unit_hot_number(						identifier: "totalWidth2",						bind: @totalWidth2,						name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/TotalWidthTextOut=Tot&al Width:",						min_value: 0.0,						max_value: @totalMaxWidth,            digits: 6,						bind_final: true,						stepper: true,						unit: "CurrentDocumentUnit",						decimal_places: 3					);					checkbox (						identifier: "singleWidthOnlyOut",						name: "$$$/GlobAdjToolUI/Dialog/WidthPointEdit/singleWidthOut=Single &Width Only",						guide_mask: [ @guide_label ],						bind: @singleWidthOut					);				}			}		}		row(spacing:@button_group_spacing, child_vertical: @align_fill, horizontal: @align_right)		{			button(        identifier: "deleteButton",        name: "$$$/gDelete=De&lete",				action: @deleteButtonAction,				bind: @deleteButton,        commit_button: true			);			row(child_horizontal: @align_right, reverse: os == @mac, child_vertical: @align_center, spacing: @related_spacing) {	   					button(					identifier: "okButton",					name: "$$$/gOK=OK",          commit_button: true);				button(					identifier: "cancelButton",					name: "$$$/gCancel=Cancel",          commit_button: true				);			}        }    }}